<div class="row">
    <div class="col-lg-9 border main-section bg-white">

        <div class="row">
            <div class="col-lg-12 p-2">
                <h3>Blog Compose</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8 message p-3 border">
                <div class="row m-0">

                    <div class="col-lg-12 bg-dark text-white">
                        <h1 class="pt-2">New Blog</h1>
                    </div>

                    <div class="col-lg-12 p-2 message-box-input">
                        <form action="/compose" method="POST">
                            <div class="form-group">
                                <input type="text" class="form-control" name="blogTitle" aria-describedby="blogHelp"
                                    placeholder="Title">
                                <textarea class="form-control" name="blogText" rows="5"></textarea>
                                <button type="submit" class="btn btn-primary btn-md pl-3 pr-3">Send</button>
                            </div>
                        </form>

                        <span>
                            <i class="fa fa-paperclip" aria-hidden="true"></i>
                            <i class="fa fa-file" aria-hidden="true"></i>
                            <i class="fa fa-picture-o" aria-hidden="true"></i>
                        </span>
                        <span class="pull-right">
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                        </span>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>